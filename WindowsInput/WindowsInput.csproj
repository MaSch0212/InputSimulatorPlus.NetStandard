<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <AssemblyName>WindowsInputPlus.NetStandard</AssemblyName>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <OutputType>Library</OutputType>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>WindowsInput.snk</AssemblyOriginatorKeyFile>

    <OutputPath>..\bin\$(Configuration)</OutputPath>
    <DocumentationFile>bin\$(Configuration)\$(AssemblyName).xml</DocumentationFile>

    <Title>Windows Input Simulator Plus</Title>
    <Description>Fork of the Windows Input Simulator Plus build against .NET Standard. Windows Input Simulator Plus is a fork of the original Windows Input Simulator with scan code support for increased compatibility.</Description>
    <Product>WindowsInputPlus</Product>
    <Company>Marc Schmidt</Company>
    <Authors>Michael Noonan, Theodoros Chatzigiannakis, Marc Schmidt</Authors>
    <Copyright>Copyright © michaelnoonan 2010, Copyright © Theodoros Chatzigiannakis 2018, Copyright © Marc Schmidt 2022</Copyright>
    <PackageLicense>MS-PL</PackageLicense>
    <RepositoryUrl>https://github.com/MaSch0212/InputSimulatorPlus.NetStandard</RepositoryUrl>
    <PackageTags>c# windows input</PackageTags>
    <Version>1.0.8.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
      <_Parameter1>WindowsInput.Tests,</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>
  
</Project>